{
  "kind": "collectionType",
  "collectionName": "noticias",
  "info": {
    "singularName": "noticia",
    "pluralName": "noticias",
    "displayName": "Notícias",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false,
      "minLength": 3
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "subtitle": {
      "type": "string",
      "required": false,
      "minLength": 3
    },
    "newtype": {
      "type": "enumeration",
      "enum": [
        "Notícias",
        "Notícias Urgentes!!!"
      ],
      "required": true,
      "default": "Notícias"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "highlight": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "deadline": {
      "type": "date"
    },
    "colorTitle": {
      "type": "enumeration",
      "enum": [
        "white",
        "black"
      ],
      "default": "white"
    },
    "Sections": {
      "type": "component",
      "repeatable": true,
      "component": "sections-to-content.sections"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    }
  }
}
